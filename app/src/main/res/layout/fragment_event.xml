<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/events_to_sub_root_transition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_header">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="@dimen/allevents_main_events_img_large_w"
                android:layout_height="@dimen/allevents_main_events_img_large_h"
                android:layout_margin="@dimen/margin_large"
                android:src="@drawable/computeaid"
                android:transitionName="@string/events_to_sub_img_transition" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/event_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_large">

                <TextView
                    android:id="@+id/event_name"
                    style="@style/TextHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CyberCrusade"
                    android:transitionName="@string/events_to_sub_name_transition" />

                <TextView
                    android:id="@+id/event_num_sub"
                    style="@style/TextSmallSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="3 events"
                    android:textSize="12sp"
                    android:transitionName="@string/events_to_sub_count_transition" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/event_content"
            style="@style/TextSmallSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:padding="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor
        in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur."
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
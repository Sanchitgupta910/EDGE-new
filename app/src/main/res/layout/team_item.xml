<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:padding="@dimen/margin_huge"
    android:layout_margin="@dimen/margin_large"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/team_img"
        android:layout_width="@dimen/team_img_wh"
        android:layout_height="@dimen/team_img_wh"
        android:contentDescription="@string/member_image"
        tools:src="@drawable/ic_action_theme" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@color/cardStroke"/>

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextHeaderLarge"
        android:textColor="@color/colorAccent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/team_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextSmallSub"
        android:layout_marginTop="@dimen/margin"
        tools:text="@tools:sample/last_names" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin">

        <ImageView
            android:id="@+id/team_ph"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            android:layout_marginEnd="@dimen/margin_large" />

        <ImageView
            android:id="@+id/team_wa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_whatsapp"
            android:layout_marginStart="@dimen/margin_large" />

    </LinearLayout>

</LinearLayout>
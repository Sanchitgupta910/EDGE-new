<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/windowBackground</item>
        <item name="itemTextAppearanceInactive">@style/TextSmallSub</item>
        <item name="itemTextAppearanceActive">@style/TextSmallSub</item>
        <item name="itemTextColor">@drawable/bottomnav_text</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="TextSmallSub" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textSub</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/orkney_medium</item>
        <item name="android:textColor">@color/textHeader</item>
    </style>

</resources>

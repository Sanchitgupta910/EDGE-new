<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
    </style>

    <style name="ToolbarText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/windowBackground</item>
        <item name="itemTextAppearanceInactive">@style/TextSmallSubInctive</item>
        <item name="itemTextAppearanceActive">@style/TextSmallSubActive</item>
        <item name="itemTextColor">@drawable/bottomnav_text</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="TextSmallSubActive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextSmallSubInctive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>

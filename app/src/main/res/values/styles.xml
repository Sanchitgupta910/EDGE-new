<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
        <item name="android:navigationBarColor">@color/systemBars</item>
        <item name="android:statusBarColor">@color/systemBars</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/windowBackground</item>
        <item name="itemTextAppearanceInactive">@style/TextSmallSub</item>
        <item name="itemTextAppearanceActive">@style/TextSmallSub</item>
        <item name="itemTextColor">@drawable/bottomnav_text</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="TextSmallSub" parent="TextBody">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/forum</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textSub</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextBodyLarge" parent="TextBody">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textBodyLarge</item>
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/kontakt</item>
        <item name="android:textColor">@color/textHeader</item>
    </style>

    <style name="TextHeaderLarge" parent="TextHeader">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="QuickItemsTextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/kanit</item>
        <item name="android:textColor">@color/textHeader</item>
    </style>

    <style name="QuickItemsTextBody" parent="TextSmallSub">
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

</resources>
